@model Categoria
@{
    ViewData["Title"] = "Modificar";
}

<h2>Modificar Categoría</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Modificar" asp-controller="AdminCategorias" class="form-horizontal" method="post" role="form">

            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Nombre" class="form-control">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Descripcion" class="form-control"> </textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Editar</button>
                    <a asp-controller="AdminCategorias" asp-action="Listar" class="btn btn-info">Regresar</a>
                </div>
            </div>
        </form>
    </div>
</div>



